// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Item {
  id        String       @id @default(uuid())
  title     String
  type      String
  episode   Float?       @default(0)
  season    Int?         @default(0)
  country   String?
  image     String?
  imageType String?
  author    String?
  url       String?
  date      DateTime?
  records   ItemRecord[]
}

model ItemRecord {
  id           String           @id @default(uuid())
  collectionId String
  itemId       String
  creationDate DateTime         @default(now())
  lastUpdate   DateTime         @updatedAt
  notes        String?
  item         Item             @relation(fields: [itemId], references: [id])
  collection   RecordCollection @relation(fields: [collectionId], references: [id])
}

model RecordCollection {
  id           String       @id @default(uuid())
  title        String
  numOfRecords Int          @default(0)
  creationDate DateTime     @default(now())
  image        String?
  imageType    String?
  notes        String?
  records      ItemRecord[]
}
